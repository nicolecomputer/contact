// prisma/schema.template.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "{{provider}}"
  url      = env("DATABASE_URL")
}

model Message {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
  read      Boolean  @default(false)

  @@index([email])
  @@index([createdAt])
}
